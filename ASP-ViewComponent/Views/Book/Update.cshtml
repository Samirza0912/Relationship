@model Book
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Book</h4>
                <form class="forms-sample" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" maxlength="1000" placeholder="Name">
                        <span style="color: red;" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" maxlength="1000" placeholder="Price">
                        <span style="color: red;" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorIds"></label>
                        <select asp-for="AuthorIds" class="form-select" asp-items="ViewBag.Authors">
                            <option selected>Select Authors</option>
                        </select>
                        <span style="color: red;" asp-validation-for="AuthorIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreIds"></label>
                        <select asp-for="GenreIds" class="form-select" asp-items="ViewBag.Genres">
                            <option selected>Select Genres</option>
                        </select>
                        <span style="color: red;" asp-validation-for="GenreIds"></span>
                    </div>
                    <button type="submit" class="btn btn-success me-2">Submit</button>
                    <a asp-action="index" class="btn btn-primary">Return To Home</a>
                </form>
            </div>
        </div>
    </div>
</div>

